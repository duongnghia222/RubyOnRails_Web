<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      
      <tr>
        <td>
          <%= friend.first_name + ' ' + friend.last_name%>
        </td>
        <td> <%= friend.email %></td>
        <td> <%= friend.phone %></td>
        <td> <%= friend.twitter %></td>
        <td> 
          <%= link_to 'Show', friend %> 


        </td>

      </tr>
      
    <% end %>
  </tbody>
</table>


